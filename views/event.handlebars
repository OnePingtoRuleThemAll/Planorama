<div class="text-center">

    <h2 id="event-name">{{event.title}}</h2>
    <p id="event-desc">{{event.body}}</p>
    <p id="ev-loc">{{event.eventLocation}}</p>
    <p id="loc-coor">{{event.locationCoordinates}}</p>
    <p id="is-priv">{{event.isPrivate}}</p>
  <!--  <p id="is-updated">{{event.updatedEvent}}</p> -->
    <p id="event-date">{{event.event_date}}</p>
    <p id="date-created">{{event.date_created}}</p>
    <p>Created by {{user.firstName}} {{user.lastName}} on {{event.date_created}}</p>
    {{#if logged_in}}
    <p>
        <button class="btn btn-primary">Add to My Events!</button>
    </p>
    <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event.id}}">DELETE</button>
    </div>
    {{else}}
    <a href="/signUpPage">Sign up to add this event!</a>
    {{/if}}
</div>
<script src="./js/events.js"></script>