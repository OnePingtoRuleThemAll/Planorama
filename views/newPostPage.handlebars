<div class="row mt-4">
    <div class="col-md-6">
        <h3 class="card-header">Create New Event</h3>


        <form class="card-body new-event-form">
            <div class="form-group">
                <label for="event-title">Event Name:</label>
                <input class="form-input" type="text" id="event-title" name="event-title" />
            </div>

            <label class="form-label" for="event-description">Event description:</label>
            <input class="form-input" type="text" id="event-description" name="event-description" />
            <div class="text-center">

                <div class="form-group">
                    <label for="event-date">Date of event: </label>
                    <input class="form-input" type="text" id="event-date" name="event-date" />

                </div>

                <div class="form-group">
                    <label for="event-location">Location:</label>
                    <input class="form-input" type="text" id="event-location" name="event-location" />
                </div>

                <div class="form-group">
                    <label for="location-coordinates">Location coordinates:</label>
                    <input class="form-input" type="text" id="location-coordinates" name="location-coordinates" />
                </div>


                <div class="form-group">
                    <label for="event-privacy">Event is Private (true or false):</label>
                    <input class="form-input" type="text" id="event-privacy" name="event-privacy" />
                </div>

                <button type="submit" class="btn">Create Event!</button>
            </div>
        </form>
    </div>


    <script src="./js/newpost.js"></script>