{{!-- Lists each events details with an link to the event page and loops over array --}}

{{#each events as |event| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/event/{{event.id}}">{{event.title}}</a>
    </h2>
    <p>
     {{event.eventLocation}}
    </p>
    <P>
      {{event.locationCoordinates}}
    </P>
    <p>{{event.event_date}}</p>
    <p>Created by {{event.user.username}} on {{event.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{event.body}}
    </p>
  </div>
</div>
{{/each}}