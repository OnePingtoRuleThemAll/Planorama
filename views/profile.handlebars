<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head> 
<body>
    <!-- Profile card -->
<div class="profile-card"> 
        <h2>My Profile</h2>
<p>
Name: {{firstName}} {{lastName}}
</p>
<p>
Birthday: {{birthday}}    
</p>
<p>
Twitter: {{twitter}}
</p>
<p>
Email: {{email}}
</p>
<!--<p>
Hobbies: {{hobbies}}
</p> -->
</div>
<!-- Events card for listing the events you created -->
{{#if events.length}}
<div class="event-card">
    <h3>My Events</h3>
{{#each events as |event|}}
    <div>
        <h4>{{event.title}}</h4>
        <p>{{event.body}}</p>
        <p>{{event.eventLocation}}</p>
        <p>{{event.locationCoordinates}}</p>
        <p>{{event.isPrivate}}</p>
      <!--  <p>{{event.updatedEvent}}</p> -->
        <p>{{event.event_date}}</p>
        <p>{{event.date_created}}</p>
    </div>
     <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event.id}}">DELETE</button>
    </div>
{{/each}}
{{/if}}
